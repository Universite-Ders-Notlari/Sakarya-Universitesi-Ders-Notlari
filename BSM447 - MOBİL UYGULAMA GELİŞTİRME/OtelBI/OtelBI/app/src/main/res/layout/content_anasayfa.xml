<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tr.edu.sakarya.nevzattasbasi.hafta5.otelbi.Anasayfa"
    tools:showIn="@layout/activity_anasayfa">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kişi Sayısı :"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033"
        android:id="@+id/textView"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/ks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />



    <RadioGroup
        android:layout_width="354dp"
        android:layout_height="99dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/toda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tek Oda"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/ioda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="İki Oda"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/soda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suit Oda"
            android:textSize="24sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnIleri1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Kaydet-İleri"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

</android.support.constraint.ConstraintLayout>
