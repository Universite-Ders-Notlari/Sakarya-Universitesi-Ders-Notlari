@{
    ViewBag.Title = "Ana Sayfa";
}

@model WebUI.Controllers.AnaSayfaDTO

<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-body">              
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner" role="listbox">
                            <!-- En Son eklenen Slide getiriyoruz -->
                            @foreach (var item in Model.slider)
                            {
                                <div id="slider" class="item" data-id="@item.ID">
                                    @if (item.SliderFoto == null)
                                    {
                                        <img src="~/Content/images/resimyok.png" alt="@item.SliderText" />
                                    }
                                    else
                                    {
                                        <img style="height:292px;" src="data:image/png;base64,@System.Convert.ToBase64String(item.SliderFoto)" alt="@item.SliderText">
                                    }
                                    <div class="carousel-caption">
                                        <h3>@item.SliderText</h3>
                                    </div>
                                </div>
                            }
                        </div>
                        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">SABİS HAKKINDA</div>
            <div class="panel-body">
                <p>
                    ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
                    enables a clean separation of concerns and gives you full control over markup
                    for enjoyable, agile development.ASP.NET MVC gives you a powerful
                    ASP.NET MVC gives you a powerfu
