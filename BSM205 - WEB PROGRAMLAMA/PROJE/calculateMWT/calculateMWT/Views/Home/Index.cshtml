            <section class="sidebar">
                <!-- Sidebar Menu -->
                <ul class="sidebar-menu">
                    <!-- Optionally, you can add icons to the links -->
                    <li class="active">
                        <a href="#"><i class="fa fa-home" aria-hidden="true"></i><span>@Resources.Home.home</span></a>
                    </li>
                    <li><a href="#"><i class="fa fa-search" aria-hidden="true"></i><span>@Resources.Home.search</span></a></li>
