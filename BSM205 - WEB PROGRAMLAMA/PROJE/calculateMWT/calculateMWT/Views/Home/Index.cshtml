                    <li><a href="#"><i class="fa fa-random" aria-hidden="true"></i><span>@Resources.Home.random</span></a></li>
                    <li><a href="#"><i class="fa fa-question-circle" aria-hidden="true"></i><span>@Resources.Home.faq</span></a></li>
                    <li><a href="#"><i class="fa fa-sign-out" aria-hidden="true"></i><span>@Resources.Home.s_out</span></a></li>
                </ul>
